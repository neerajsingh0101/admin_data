<div id="container">
  <%= erb_file('lib','views','_header.html.erb') %>    
  <div id="wrapper">
    <div id="main">
    
    <div class='breadcrum'>
        <%= link_to 'Home',admin_data_path %>
        >
        <%= link_to @klass, admin_data_list_path(:klass => @klass.name) %> 
    </div>
    
    <p>
      <span class="title"><%= @klass.name %></span>
      <span class='records_count'>(<%= @klass.count %> records)</span>
    </p>        
      
      <%= erb_file('lib','views','_flash_message.html.erb') %>      

      <div class="block" id="block-tables">
        <div class="secondary-navigation">
            <%= erb_file('lib','views','_secondary_navigation.html.erb') %>                                              
          <div class="clear"></div>
        </div>          
        <div class="content">          
          <h2 class="title"></h2>
          <div class="inner">
          <h2>Create a new record</h2>
          <%= form_tag({:action => 'create', :klass => @klass.to_s}, {:class => 'nice_form'}) %>
            <%= erb_file('lib','views','_form.html.erb') %>
          </form>
          </div>
        </div>
      </div>
        
      <%= erb_file('lib','views','_powered_by.html.erb') %>      
    </div>
    
    <div class="clear"></div>      
  </div>    
</div>

