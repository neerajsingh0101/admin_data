<%= form_tag(search_path(:klass => klass),  :method => 'get', :class => 'form search_form', :id => 'search')  do %>

  <div class='search_box'>
    <div id='quick_search'>
      <label class='label keyword_label'>Search keyword</label>
      <input type="text" id="quick_search_input" name="query" value="<%=params[:query]%>" />
      <div class='clear'></div>
      <%= submit_tag 'Search', :name => nil, :disable_with => 'searching ...', :class => 'submit_search' %>
    </div>
  </div>

<% end %>

<br />

<style>
  .keyword_label {
    float: left;
    padding-right: 10px;
    margin-right: 10px;
  }
  #quick_search_input {
    float: left;
    margin-left: 10px;
    margin-right: 20px;
  }
</style>
