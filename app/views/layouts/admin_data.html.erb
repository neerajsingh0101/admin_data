  <head>
	  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	  <title>admin_data</title>

    <script>
      <% f = File.new(File.join(RAILS_ROOT,'vendor','plugins','admin_data','lib','js','jquery-1.3.2.min.js')) %>    
      <%=f.read%>
      <% f = File.new(File.join(RAILS_ROOT,'vendor','plugins','admin_data','lib','js','jquery-ui-1.7.custom.min.js')) %>    
      <%=f.read%>
    </script>

    <% if params[:action] == 'advance_search' %>
      <script>
        <% f = File.new(File.join(RAILS_ROOT,'vendor','plugins','admin_data','lib','js','search_core.js')) %>    
        <%= f.read %>

        <% f = File.new(File.join(RAILS_ROOT,'vendor','plugins','admin_data','lib','js','jquery.form.js')) %>    
        <%= f.read %>
      </script>
    <% end %>
  
    <script>
      $(document).ready(function(){
        function colorize_table(){
            $('.colorize tr:odd').addClass('odd'); 
            $('.colorize tr:even').addClass('even'); 
        };
        colorize_table();
      });
    </script>
	
  	<style type='text/css'>
      <% f = File.new(File.join(RAILS_ROOT,'vendor','plugins','admin_data','lib','css','base.css')) %>    
      <%= f.read %>
      <% f = File.new(File.join(RAILS_ROOT,'vendor','plugins','admin_data','lib','css','green.css')) %>    
      <%= f.read %>    
    </style>  
